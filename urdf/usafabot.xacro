<?xml version='1.0'?>

<robot name="$(env HOSTNAME)" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:arg name="robot_name" default=""/>

<xacro:property name="namespace" value="$(arg robot_namespace)" />

<!-- * * * Link Definitions * * * -->
        <link name="$(arg robot_name)_base_footprint"/>

        <link name="$(arg robot_name)_imu_link"/>

	<link name="$(arg robot_name)_base_link">
	<visual>
	  <origin xyz="0 0 0.005" rpy="1.5708 0 1.5708" />
	  <geometry>
		  <mesh filename="package://usafabot/meshes/bottom_chassis.stl" scale=".001 .001 .001"/>
	  </geometry>
	  <material name="black">
		<color rgba="0 0 0 1"/>
	  </material>
	</visual>
	</link>

	<link name="$(arg robot_name)_top_chassis">
	<visual>
	  <origin xyz="0 0 0" rpy="0 0 1.5708" />
	  <geometry>
		<mesh filename="package://usafabot/meshes/top_chassis.stl" scale=".001 .001 .001"/>
	  </geometry>
	  <material name="blue">
		<color rgba="0 .5 1 1"/>
	  </material>
	</visual>
	</link>

	<link name="$(arg robot_name)_right_wheel">
	<visual>
	  <origin xyz="0 0 0" rpy="0 0 1.5708" />
	  <geometry>
		<mesh filename="package://usafabot/meshes/rviz_wheel1.stl" scale=".001 .001 .001"/>
	  </geometry>
	  <material name="grey">
		<color rgba=".5 .5 .5 1"/>
	  </material>
	</visual>
	</link>

	<link name="$(arg robot_name)_left_wheel">
	<visual>
	  <origin xyz="0 0 0" rpy="0 3.1415 1.5708" />
	  <geometry>
		<mesh filename="package://usafabot/meshes/rviz_wheel2.stl" scale=".001 .001 .001"/>
	  </geometry>
	  <material name="grey">
		<color rgba=".5 .5 .5 1"/>
	  </material>
	</visual>
	</link>
  
	<link name="$(arg robot_name)_laser">
	<visual>
	  <origin xyz="0 0 0" rpy="0 0 0" />
	  <geometry>
		<cylinder radius="0.035" length="0.055"/>
	  </geometry>
	  <material name="black">
		<color rgba="0 0 0 1"/>
	  </material>
	</visual>
	</link>

	<link name="$(arg robot_name)_roadrunner">
	<visual>
	  <origin xyz="0 0 0" rpy="0 0 0" />
	  <geometry>
		<box size=".1 .04 0.05"/>
	  </geometry>
	  <material name="black">
		<color rgba="0.0 0.0 0.0 1.0"/>
	  </material>
	</visual>
	</link>
 
	<!-- * * * Joint Definitions * * * -->
        <joint name="$(arg robot_name)_base_joint" type="fixed">
                <parent link="$(arg robot_name)_base_footprint"/>
		<child link ="$(arg robot_name)_base_link"/>
		<origin xyz="0.0 0.0 0.005" rpy="0 0 0"/>
	</joint>		

        <joint name="$(arg robot_name)_joint_top_chassis" type="fixed">
		<parent link="$(arg robot_name)_base_link"/>
		<child link="$(arg robot_name)_top_chassis"/>
	</joint>
	
	<joint name="$(arg robot_name)_joint_left_wheel" type="continuous">
		<parent link="$(arg robot_name)_base_link"/>
		<child link="$(arg robot_name)_left_wheel"/>
		<origin xyz="0 -.0728 0" rpy="0 0 0" />
		<axis xyz="1 0 0" />
	</joint>
	
	<joint name="$(arg robot_name)_joint_right_wheel" type="continuous">
		<parent link="$(arg robot_name)_base_link"/>
		<child link="$(arg robot_name)_right_wheel"/>
		<origin xyz="0 .0728 0" rpy="0 0 0" />
		<axis xyz="1 0 0" />
	</joint>

	<joint name="$(arg robot_name)_joint_lidar" type="fixed">
		<parent link="$(arg robot_name)_base_link" />
		<child link="$(arg robot_name)_laser" />
		<origin xyz="-.05 0 0.0825" rpy="0 0 -1.5708" />
	</joint>

	<joint name="$(arg robot_name)_joint_imu" type="fixed">
		<parent link="$(arg robot_name)_base_link" />
		<child link="$(arg robot_name)_imu_link" />
		<origin xyz="0 0 .05" rpy="0 0 0" />
	</joint>

	<joint name="$(arg robot_name)_joint_roadrunner" type="fixed">
		<parent link="$(arg robot_name)_roadrunner" />
		<child link="$(arg robot_name)_base_footprint" />
		<origin xyz="0.0 0.0 -0.115" rpy="0 0 0" />
	</joint>
	
</robot>
