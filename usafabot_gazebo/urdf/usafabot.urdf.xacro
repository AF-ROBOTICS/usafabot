<?xml version='1.0'?>

<robot name="usafabot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  

  <xacro:include filename="$(find usafabot_description)/urdf/common_properties.xacro" />
  <xacro:include filename="$(find usafabot_description)/urdf/usafabot.gazebo.xacro" />

   <link name="base_footprint"/>
   
   <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.010" rpy="0 0 1.5708"/>
  </joint>

   <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <mesh filename="package://usafabot_description/meshes/bottom_chassis.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="black" /> 
    </visual>

    <!-- Base collision -->
    <collision>
      <origin xyz="0 0.006 0.014" rpy="0 0 0" />
      <geometry>
        <box size="0.14046 0.17219 0.0679"/>
      </geometry>
    </collision>

    <!-- Base inertial -->
    <inertial>
    <mass value="5"/>
    <inertia ixx="0.13" ixy="0.0" ixz="0.0"
             iyy="0.21" iyz="0.0" izz="0.13"/>
    </inertial>

  </link>

  

    <joint name="caster_back_link" type="fixed">
      <parent link="base_link"/>
      <child link="caster_back_link"/>
      <origin xyz="0 .064 -0.0175" rpy="0 0 0" />
    </joint>
    
    <link name="caster_back_link">
     <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0" />
      <geometry>
        <sphere radius=".017"/>
      </geometry>
     </collision>

     <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>
    



    <joint name="caster_front_joint" type="fixed">
      <parent link="base_link"/>
      <child link="caster_front_link"/>
      <origin xyz="0 -.044 -0.0175" rpy="0 0 0" />
    </joint>
    
    <link name="caster_front_link">
     <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0" />
      <geometry>
        <sphere radius=".017"/>
      </geometry>
     </collision>

     <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>
    



  <!-- Top Chassis -->
  <link name="top_chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://usafabot_description/meshes/top_chassis.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <!-- Top chassis collision -->
    <!-- <collision>
      <origin xyz="0 0 0" rpy="0 1.570795 0" />
      <geometry>
        <cylinder length=".008" radius="0.033" />
      </geometry>
    </collision> -->

    <!-- Top chassis inertial -->
    <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.01" ixy="0.0" ixz="0.0"
             iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>

  </link>

  <joint name="joint_top_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="top_chassis"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <!-- Left Wheel -->
  
    <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz=".0728 0 0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>

  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://usafabot_description/meshes/rviz_wheel1.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="black"/>
    </visual>

    <!-- Wheel collision -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.570795 0" />
      <geometry>
        <cylinder length=".008" radius="0.035" />
      </geometry>
    </collision>

    <!-- Wheel inertial -->
    <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.01" ixy="0.0" ixz="0.0"
             iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>

  </link>

  <!-- Right Wheel -->

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="-.0728 0 0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>


  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 3.1415 0" />
      <geometry>
        <mesh filename="package://usafabot_description/meshes/rviz_wheel2.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="black"/>
    </visual>
    
    <!-- Wheel collision -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.570795 0" />
      <geometry>
        <cylinder length=".008" radius="0.035" />
      </geometry>
    </collision>

    <!-- Wheel inertial -->
    <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.01" ixy="0.0" ixz="0.0"
             iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>

  </link>



  <!-- LIDAR -->
    <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0 .04 0.075" rpy="0 0 -1.5708" />
  </joint>

  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://usafabot_description/meshes/lds.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>
  
  <!-- CAMERA -->
  <joint name="camera_joint" type="fixed">
   <axis xyz="0 1 0" />
   <origin xyz="0 -0.07 0.06" rpy="0 0 -1.57"/>
   <parent link="base_link" />
   <child link="camera_link" />
   </joint>
   
   <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size=".035 .035 .015"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size=".035 .035 .015"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
   
   <!-- IMU -->
   <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.068" rpy="0 0 -1.57"/>  </joint>

  <link name="imu_link"/>
   
   


</robot>
